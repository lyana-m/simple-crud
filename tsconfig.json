{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES2020"
  },
  "lib": ["es2015"]
}
